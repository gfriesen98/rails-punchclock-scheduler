<%= stylesheet_link_tag "show" %>
<%= render 'shared/header' %>
<% if current_user %>
  <% if current_user.position != 'punchclock' %>
    

    <div class="cal"><%= month_calendar events: @shifts do |date, shifts| %>
      <%= date.day %>
      <% shifts.each do |shift| %>
        <div>
          <%= shift.start_time.strftime("%-l:%M%P") %> - <%= shift.end_time.strftime("%-l:%M%P") %>
        </div>
      <% end %>
    <% end %></div>
  
  <% else %>

  <% end %>


<% end %>